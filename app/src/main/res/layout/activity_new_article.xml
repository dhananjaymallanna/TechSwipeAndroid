<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_200"
    tools:context=".NewArticle">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_weight="100"
        android:background="@color/purple_A700"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
        <TextView
            android:id="@+id/homePage"
            android:text="HomePage"
            android:textColor="@color/grey_white_1000"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:background="@color/dark_purple_400"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/profilePage"
            android:text="ProfilePage"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:textColor="@color/grey_white_1000"
            android:background="@color/dark_purple_400"
            android:layout_height="50dp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="20dp"
        android:background="@color/grey_white_1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
        android:paddingBottom="12dp"
        android:id="@+id/selectImage"
        android:src="@drawable/outline_add_a_photo_24"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <EditText
        android:id="@+id/newTitle"
        android:hint="Set appropriate Title"
        android:fontFamily="sans-serif-black"
        android:textSize="30dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/newContent"
        android:hint="Please add the content here"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif"
        android:textSize="15dp"

        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:checked="true"
        android:paddingBottom="12dp"
        android:id="@+id/isPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Make this post public"/>

    <Button
        android:id="@+id/submit_btn"
        android:paddingBottom="12dp"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>